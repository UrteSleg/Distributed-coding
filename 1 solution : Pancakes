#include <iostream>
#include <cassert>
#include "message.h"
#include "pancakes.h"

using namespace std;

int main() 
{
    long long ans = 0LL;
    ll nodes = NumberOfNodes();
    ll my = MyNodeId();
    ll StackSize = GetStackSize();
    
    for(int i = my; i < StackSize; i += nodes) 
    {
      if (i == 0) continue;
      if (GetStackItem() < GetStackItem(i - 1)) ++ans;
    }
    
    if (my != 0)
    {
      Putll(0, ans);
      Send(0);
      return 0;
    }
    
    for(int nd=1; nd < nodes; nd++)
    {
      Receive(nd);
      ans+=GetLL(nd);
    }
    
    cout<<ans+1;
    return 0;  
  }
